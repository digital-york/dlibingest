<fieldset class="optional prompt">
  <%= f.input :advisor, as: :multi_value, label: "Supervisor (string)", input_html: { class: 'form-control' } %>
  <%= f.input :advisor_resource_ids, as: :multi_value, label: "Supervisor (resource)", input_html: { class: 'form-control' } %>

  <% ql_service = AuthorityService::QualificationLevelsService.new %>
  <%= f.input :qualification_level, as: :multi_value_select,
              label: 'Degree Level',
              collection: ql_service.select_all_options,
              include_blank: show_blank(curation_concern),
              item_helper: ql_service.method(:include_current_value),
              input_html: { class: 'form-control' } %>

  <% qn_service = AuthorityService::QualificationNameService.new %>
  <%= f.input :qualification_name_resource_ids, as: :multi_value_select,
              label: 'Degree',
              collection: qn_service.select_all_options,
              include_blank: true,
              item_helper: qn_service.method(:include_current_value),
              input_html: { class: 'form-control' } %>
</fieldset>