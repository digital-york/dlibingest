<fieldset class="required">
  <%= f.input :title, as: :multi_value %>
  <%= f.input :creator, as: :multi_value %>
  <%= f.input :creator_resource_ids, as: :multi_value %>
  <%= f.input :date_of_award %>
  <% service = AuthorityService::DepartmentService.new %>
  <%= f.input :department_resource_ids, as: :multi_value_select,
              label: 'Department',
              collection: service.select_all_options,
              include_blank: true,
              item_helper: service.method(:include_current_value),
              input_html: { class: 'form-control' } %>
</fieldset>