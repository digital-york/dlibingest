<fieldset class="required">
  <%= f.input :title, as: :multi_value %>
  <%= f.input :creator_string, as: :multi_value,
              label: 'Author' %>
  
  <% ql_service = AuthorityService::JournalService.new %>
  <%= f.input :journal_resource_ids, as: :multi_value_select,
              label: 'Journal',
              collection: ql_service.select_all_options,
              include_blank: true,
              item_helper: ql_service.method(:include_current_value),
              input_html: { class: 'form-control' } %>
</fieldset>