<% provide :page_title, @presenter.page_title %>
<% provide :page_header do %>
  <h1><%= @presenter %></h1>
  <span class="state state-<%= @presenter.workflow.state %>"><%= @presenter.workflow.state_label %></span>
  <% if @parent_presenter %>
    <ul class="breadcrumb">
      <li><%= link_to @parent_presenter, polymorphic_path([main_app, @parent_presenter]) %></li>
      <li class="active"><%= @presenter.human_readable_type %></li>
    </ul>
  <% else %>
    <span class="human_readable_type">(<%= @presenter.human_readable_type %>)</span>
  <% end %>
<% end %>

<% collector = can?(:collect, @presenter.id) %>
<% editor    = can?(:edit,    @presenter.id) %>

<!--<%= render 'representative_media', presenter: @presenter %>-->
<%= image_tag "#{@presenter.solr_document._source["thumbnail_path_ss"]}",
              class: "representative-media",
              alt: "",
              role: "presentation" %>

<%= render "attributes", presenter: @presenter %>


<% if @presenter.member_presenters.present?  and @presenter.member_presenters.to_s.include? '["embeddedfile"]' %>
  <%= render 'related_files', presenter: @presenter %>
<% end %>

<% if editor %>
    <%= render 'multiple_upload', presenter: @presenter %>
<% end %>

<% if @presenter.member_presenters.present?  and @presenter.member_presenters.to_s.include? 'externalurl' %>
    <%= render 'related_external_files', presenter: @presenter %>
<% end %>

<%= render 'workflow_actions', presenter: @presenter if @presenter.workflow.actions.present? %>
<%= render "show_actions", collector: collector, editor: editor%>
