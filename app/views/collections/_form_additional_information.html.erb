<fieldset class="optional prompt">
  <legend>Additional Information</legend>
  <%= f.input :publisher,               as: :multi_value, input_html: { class: 'form-control' } %>
  <%= f.input :date,               as: :multi_value, input_html: { class: 'form-control' } %>
  <% lang_service = AuthorityService::LanguagesService.new %>
  <%= f.input :language, as: :multi_value_select,
              collection: lang_service.select_all_options,
              include_blank: true,
              item_helper: lang_service.method(:include_current_value),
              input_html: { class: 'form-control' } %>
  <%= f.input :keyword,               as: :multi_value, input_html: { class: 'form-control' } %>
  <% qn_service = AuthorityService::SubjectService.new %>
  <%= f.input :subject_resource_ids, as: :multi_value_select,
              label: 'Subject heading',
              collection: qn_service.select_all_options,
              include_blank: true,
              item_helper: qn_service.method(:include_current_value),
              input_html: { class: 'form-control' } %>
  <%= f.input :rights_holder,               as: :multi_value, input_html: { class: 'form-control' } %>
  <%= render "form_rights", f: f %>
</fieldset>
